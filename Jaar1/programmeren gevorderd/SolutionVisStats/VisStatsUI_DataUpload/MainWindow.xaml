<Window x:Class="VisStatsUI_DataUpload.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisStatsUI_DataUpload"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="3"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Content="Vissoorten" Margin="5" Click="Button_Click_Vissoorten"/>
        <Button Grid.Row="0" Grid.Column="1" Content="Upload DB" Margin="5" Click="Button_Click_UploadVissoorten"/>
        <ListBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Name="VissoortenFileListBox" IsEnabled="False"/>
        <Button Grid.Row="4" Grid.Column="0" Content="Statistieken" Margin="2" Click="Button_Click_Statistieken"/>
        <Button Grid.Row="4" Grid.Column="1" Content="Upload naar databanken" Margin="5" Click="Button_Click_UploadStatistieken"/>
        <ListBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="2" Name="StatistiekenFileListBox" IsEnabled="False"/>
        <Button Grid.Row="2" Grid.Column="0" Content="Havens" Margin="2" Click="Button_Click_Haven"/>
        <Button Grid.Row="2" Grid.Column="1" Content="Upload naar databanken" Margin="5" Click="Button_Click_UploadHaven"/>
        <ListBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="2" Name="HavenFileListBox" IsEnabled="False"/>
    </Grid>
</Window>